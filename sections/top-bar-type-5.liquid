  },
  {
  "type": "text",
  "id": "header_date",
  "label": "Day & Time",
  "default": "(00) 000 111 222"
  },  
  {
  "type": "text",
  "id": "header_mail_label_class",
  "label": "Icon class",
  "default": "zmdi zmdi-email"
  },  
  {
  "type": "text",
  "id": "header_mail_value",
  "label": "Mail address",
  "default": "info@somedomain.com"
  },
{
  "type": "header",
  "content": "Top Bar"
},
{
  "type": "color",
  "id": "top_bar_bg",
  "label": "Top bar background",
  "default": "#fff"
  },
{
  "type": "color",
  "id": "top_bar_text",
  "label": "Top bar text",
  "default": "#000"
  },
{
  "type": "color",
  "id": "top_bar_links",
  "label": "Top bar links",
  "default": "#000"
  },
{
  "type": "color",
  "id": "top_bar_link_hover",

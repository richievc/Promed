 {% if section.settings.display_top_bar %}    
<div class="top_bar top-bar-type-5" style="background:{{ section.settings.top_bar_bg }};">  
  <div class="container">
    <div class="header_social top_bar_left">
      <ul class="menu_bar_right grid__item">
        <li class="header_currency">
          <ul class="tbl-list">
            <li class="currency dropdown-parent uppercase currency-block">
              {% if section.settings.display_currency %}    
              {% include 'currencies-switcher' %}
              {% endif %}
            </li>
          </ul>
        </li>    
        {% if section.settings.header_phone_value != blank %}
        <li class="medium-down--hide phone_no"><i class="{{ section.settings.header_phone_class }}"></i><span> {{ section.settings.header_phone_value }}</span></li>
        {% endif %}
        {% if section.settings.header_date != blank %}
        <li class="medium-down--hide"><i class="{{ section.settings.header_time_class }}"></i><span> {{ section.settings.header_date }}</span></li>
        {% endif %}
      </ul>
    </div>
    <div class="top_bar_menu">      
      <ul class="menu_bar_right grid__item wide--one-sixth post-large--one-sixth">
        {% if section.settings.header_mail_value != blank %}
        <li class="medium-down--hide"><i class="{{ section.settings.header_mail_label_class }}"></i> <a href="mailto:{{ section.settings.header_mail_value }}"> {{ section.settings.header_mail_value }}</a></li>
        {% endif %}
        {% if section.settings.display_header_social %}
        <li class="header_social">     
          {% include 'social-links-type-6' %}
        </li>
        {% endif %}      
      </ul>        
    </div>
  </div>
</div>
 {% endif %}     
<style>
  
  .header-type-5 .header-top a.close { background: {{ section.settings.stripe_icon }}; }  
    .header-type-5 .header-top a.close:hover { background: {{ section.settings.stripe_icon_hover }}; }  
    .header-type-5 .header-top { background: {{ section.settings.stripe_bg }}; }      
    .header-type-5 .header-top ul li { color: {{ section.settings.stripe_text }}; }    

    /* Top block */
    .header-type-5 .top_bar { background: {{ section.settings.top_bar_bg }}; }
    .header-type-5 .top_bar li { color:{{section.settings.top_bar_text}};}     
    .header-type-5 .top_bar a { color:{{section.settings.top_bar_links }};}    
    .header-type-5 .top_bar a:hover, .header-type-5 .top_bar a:hover span { color:{{section.settings.top_bar_link_hover }};}   


    .header-type-5 .top_bar li a,.header-type-5 .top_bar li span,.top-bar-type-5.top_bar .tbl-list>li.currency>.dropdown-toggle { border-right:1px solid {{ section.settings.top_border_between_bars }}; }
    .header-type-5 .top_bar ul li:last-child,.header-type-5 .top_bar li:last-child span { border-right:none; }

  
</style>




{% schema %}




{
"name": "Header",
"settings": [ 
